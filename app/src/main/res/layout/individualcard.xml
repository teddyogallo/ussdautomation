<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/airteltoagent"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"

            android:layout_marginStart="10dp"

            android:layout_marginTop="10dp"



            android:layout_marginBottom="10dp"

            android:backgroundTint="@color/white"

            android:gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="false"
            android:layout_marginEnd="20dp"

            app:contentPadding="0dp"
            app:rippleColor="@color/common_google_signin_btn_text_dark_pressed"
            app:strokeColor="@color/material_on_background_disabled"
            app:strokeWidth="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/dialcodestring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"

                    android:layout_marginStart="33dp"
                    android:layout_marginTop="3dp"
                    android:text="*1*1"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/actualdialcode"
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:layout_below="@+id/dialcodestring"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"
                    android:text="*211#"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/airtedepositmoneydescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actualdialcode"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="21dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="Airtel to Agent" />
            </RelativeLayout>





        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>


